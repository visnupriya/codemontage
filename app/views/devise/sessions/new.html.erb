<div class="five columns">
	<h2>Sign in</h2>


	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="form-inputs">
		<%= f.input :email, :required => false, :autofocus => true %>
		<%= f.input :password, :required => false %>
		<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, "Sign in" , :class => "btn small radius button"%>
	</div>
	<% end %>
	<%= link_to "Sign up", new_registration_path(resource_name) %> | <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>

<div class="one columns top-one align-center">
	<h2>OR</h2>
</div>

<div class="six columns top-one">
	<%= link_to '<i class="fi-social-github"></i>  Sign in with GitHub'.html_safe, "/auth/github", :class => "large radius index button github-signin" %>
</div>
<br/>


